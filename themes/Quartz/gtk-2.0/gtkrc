{
    xthickness = 6
    ythickness = 2

    bg[NORMAL] = @base_color
    bg[PRELIGHT] = shade(1.1, @base_color)
    bg[ACTIVE]  = @base_color
    bg[INSENSITIVE] = @base_color

    GtkWidget::focus-padding = 0
}

